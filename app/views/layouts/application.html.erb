<!DOCTYPE html>
<html>
  <head>
    <title>Bibber - Continuous delivery by Travis!</title>
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <header>
      <h1><%= link_to "Bibber", root_path %></h1>
      <nav>
        <ul>
          <% if current_user %>
            <li><%= current_user.username %>
              <ul>
                <li><%= link_to 'Profile', current_user %></li>
                <li><%= link_to 'Logout', logout_path, method: 'delete' %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Register', register_path %></li>
            <li><%= link_to 'Login', login_path %></li>
          <% end %>
          <li><%= link_to 'All references', references_path %></li>
          <% for et in entry_types %>
            <li><%= link_to "Add #{et} reference", send("new_#{et}_path") %></li>
          <% end %>
          <li><%= link_to 'Export all references', downloadAll_path(@reference) %>  
        </ul>
      </nav>
    </header>

    <div class="alert"><%= alert %></div>
    <div class="notice"><%= notice %></div>

    <div id="torso">
      <%= yield %>
    </div>

  </body>
</html>

